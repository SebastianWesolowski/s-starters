{
  "name": "next-js-boilerplate",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "lint": "run-s format:check lint:parallel",
    "lint:parallel": "run-p lint:check style:check:strict",
    "lint:check": "eslint \"./src/**/*.+(js|jsx|ts|tsx)\" --cache",
    "lint:check:strict": "cross-env NODE_ENV=strictRules npm run lint:check -- --report-unused-disable-directives",
    "lint:check:staged": "run-s lint:fix eslint . --ext .js,.jsx,.ts,.tsx --cache",
    "lint:fix": "run-s format \"lint:check -- --fix\" style:fix next:lint",
    "lint:fix:strict": "cross-env NODE_ENV=strictRules npm run lint:fix -- --report-unused-disable-directives",
    "style:check": "stylelint \"./src/**/*.+(css|scss|sass)\" --cache",
    "style:check:staged": "run-s style:fix stylelint \"*.+(css|scss|sass)\" --cache",
    "style:check:strict": "cross-env NODE_ENV=strictRules npm run style:check --",
    "style:fix": "run-s \"style:check -- --fix\"",
    "format": "npm run format:check -- --write",
    "format:check": "prettier --check \"./**/*.+(js|jsx|ts|tsx|json)\" --ignore-unknown --json-recursive-sort --ignore-path .gitignore",
    "format:check:staged": "prettier --check --ignore-unknown --json-recursive-sort",
    "dev": "run-s copy:assets next:dev",
    "start": "run-s build:prod next:start",
    "build": "run-s copy:assets build:next",
    "postbuild": "next-sitemap",
    "build:prod": "run-s copy:assets build:next next:export postbuild",
    "build:next": "next build",
    "next:export": "next export",
    "next:dev": "next dev",
    "next:lint": "next lint --fix",
    "next:start": "next start",
    "clean": "rimraf .next out",
    "copy:assets": "copyfiles -u 1 \"./src/assets/**/*.+(png|svg|jpg|jpeg|webp|mp4|pdf|ico|woff2|webmanifest|xml)\" public",
    "analize": "cross-env ANALYZE=true npm run build",
    "test": "jest --maxWorkers=25%",
    "test:ci": "jest --ci",
    "test:watch": "jest",
    "test:coverage": "run-s \"test -- --coverage\" test:clear",
    "test:clear": "rimraf ./reports/coverage && mv coverage ./reports/",
    "test:update": "jest --updateSnapshot",
    "test:changed": "jest --onlyChanged",
    "prepare": "husky install",
    "quality:check:jscpd": "jscpd ./src/",
    "quality:check:unimported": "unimported",
    "quality:check:types": "tsc --noEmit --incremental --pretty && tsc --project cypress --noEmit --pretty",
    "husky:prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
    "husky:pre-commit": "lint-staged -c ./.husky/lint-staged.config.json",
    "husky:pre-push": "run-s lint quality:check:* build",
    "husky:commit-msg": "commitlint --edit",
    "new": "hygen new component",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "engines": {
    "node": ">=16.17.1"
  },
  "dependencies": {
    "@fontsource/inter": "~4.5.13",
    "@fontsource/lexend": "~4.5.13",
    "@headlessui/react": "~1.7.3",
    "@tailwindcss/forms": "~0.5.3",
    "clsx": "~1.2.1",
    "cssnano-preset-advanced": "^5.3.9",
    "focus-visible": "~5.2.0",
    "next": "^13.1.2",
    "next-seo": "^5.15.0",
    "next-sitemap": "^3.1.49",
    "next-themes": "~0.2.1",
    "postcss-focus-visible": "~7.1.0",
    "react": "~18.2.0",
    "react-cool-dimensions": "~2.0.7",
    "react-dom": "~18.2.0",
    "react-hotjar": "~5.1.0",
    "react-icons": "~4.4.0",
    "tailwind-merge": "~1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "@netlify/plugin-nextjs": "latest",
    "@next/bundle-analyzer": "^13.1.2",
    "@next/env": "^13.1.6",
    "@percy/cli": "^1.17.0",
    "@percy/cypress": "^3.1.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "~13.4.0",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-test-renderer": "~18.0.0",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "cypress": "^12.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.1.2",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-tailwindcss": "^3.8.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-webpack-plugin": "^4.0.0",
    "git-cz": "^4.8.0",
    "git-cz-husky": "^0.1.1",
    "husky": "^8.0.3",
    "hygen": "^6.2.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jscpd": "^3.4.5",
    "line-reader": "^0.4.0",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^15.1.0",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.8.3",
    "prettier-plugin-sort-json": "^0.0.2",
    "prettier-plugin-tailwindcss": "~0.1.13",
    "react-test-renderer": "~18.2.0",
    "readline": "^1.3.0",
    "rimraf": "^4.1.1",
    "sass": "^1.58.0",
    "semantic-release": "^19.0.5",
    "start-server-and-test": "^1.15.2",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order-fix": "^0.1.9",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-config-tailwindcss": "^0.0.3",
    "stylelint-no-unresolved-module": "^2.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.2.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "unimported": "^1.19.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
