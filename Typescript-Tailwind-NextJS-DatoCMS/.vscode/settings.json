{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-file"
  },
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": ["source.addMissingImports", "source.fixAll.eslint", "source.fixAll"],
  // Multiple language settings for json and jsonc files
  "[json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.validate": false,
  "scss.validate": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#000032"
  },
  "files.exclude": {
    ".DS_Store": true,
    ".browserslistrc": true,
    ".editorconfig": true,
    ".env.example": true,
    ".env": true,
    ".eslintcache": true,
    ".eslintignore": true,
    ".eslintrc": true,
    ".gitattributes": true,
    ".github": true,
    ".gitignore": true,
    ".husky": true,
    ".hygen": true,
    ".hygen.js": true,
    ".next": true,
    ".nvmrc": true,
    ".prettierignore": true,
    ".prettierrc": true,
    ".stylelintcache": true,
    ".stylelintignore": true,
    ".stylelintrc.js": true,
    ".unimportedrc.json": true,
    ".vscode/css.code-snippets": true,
    ".vscode/extensions.json": true,
    ".vscode/launch.json": true,
    ".vscode/tasks.json": true,
    ".vscode/typescriptreact.code-snippets": true,
    ".vscode/settings.json": false,
    "@types": true,
    "README.md": true,
    "changelog.config.js": true,
    "commitlint.config.js": true,
    "jest.config.js": true,
    "jest.setup.js": true,
    "netlify.toml": true,
    "next-env.d.ts": true,
    "next-sitemap.js": true,
    "next.config.js": true,
    "node_modules": true,
    "out": true,
    "package.json": true,
    "postcss.config.js": true,
    "prettier.config.js": true,
    "public": true,
    "reports": true,
    "tailwind.config.js": true,
    "tools": true,
    "tsconfig.json": true,
    "yarn-error.log": true,
    "yarn.lock": true
    // "datocms.json": true
  }
}
